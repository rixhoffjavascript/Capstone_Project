# API Configuration
REACT_APP_API_URL=https://flooring-crm-api.onrender.com  # Production backend API URL

# Frontend Configuration
VITE_APP_URL=https://flooring-crm-frontend.onrender.com  # Frontend application URL

# Square Payment Configuration
REACT_APP_SQUARE_APP_ID=  # Your Square application ID
REACT_APP_SQUARE_LOCATION_ID=  # Your Square location ID
REACT_APP_SQUARE_ENV=sandbox  # 'sandbox' or 'production'

# Development Configuration
# REACT_APP_API_URL=http://localhost:8080  # Local development backend URL
# VITE_APP_URL=http://localhost:5173  # Local development frontend URL

# Authentication Configuration
# These values are automatically managed by the application
# AUTH_TOKEN_KEY=auth_token  # Local storage key for authentication token
# AUTH_USER_ROLE=user_role  # Local storage key for user role

# Feature Flags
# ENABLE_PAYMENT_PROCESSING=true  # Enable/disable payment processing features
# ENABLE_ANALYTICS=false  # Enable/disable analytics tracking

# Error Reporting
# SENTRY_DSN=your_sentry_dsn  # Error reporting configuration (optional)
# LOG_LEVEL=info  # Logging level (debug, info, warn, error)
